<UserControl x:Class="DataSourceEmulated.CC.TCPCC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataSourceEmulated.CC"
             Loaded="UserControl_Loaded">
    <Grid>
        <ComboBox Name="cbIP"   Height="25" Width="120" Margin="5,5,0,0"   VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox Name="tbPort"  Height="25" Width="80"  Margin="140,5,0,0"  VerticalAlignment="Top" Text="60000"     HorizontalAlignment="Left"/>
        <ToggleButton x:Name="BtnTCP" Height="25" Width="80" Margin="5,40,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Focusable="False" Checked="BtnTCP_Checked" Unchecked="BtnTCP_Unchecked"/>
        <ListBox Background="AliceBlue" BorderThickness="0" x:Name="lbTCPClient" Margin="100,40,0,10" HorizontalAlignment="Left" Width="142"/>
        <ListBox Background="AliceBlue" BorderThickness="0" Name="lbTCPContent"  Margin="241,40,5,10"/>
    </Grid>
</UserControl>

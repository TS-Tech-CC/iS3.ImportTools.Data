<Window x:Class="iS3.ImportTools.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iS3.ImportTools.Main"
        mc:Ignorable="d"
        Height="900" Width="600">
    <Window.Resources>

        <DataTemplate x:Key="_ABC">
            <Border BorderBrush="Black" BorderThickness="0,0,0,5" Height="200" Margin="0">
                <Grid>
                    <Label          Height="32" Margin="0,0,0,0" VerticalAlignment="Top" Content="{Binding state}" />
                    <DataGrid       Margin="0,32,0,0" IsReadOnly="True" RowHeaderWidth="0" ItemsSource="{Binding chkDV}"/>
                </Grid>
            </Border>
        </DataTemplate>
        
    </Window.Resources>
    <Grid>
        <ToggleButton x:Name="SQLStart" Height="25" Width="80" Margin="10,30,0,0" Checked="SQLStart_Checked" Unchecked="SQLStart_Unchecked" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ListBox x:Name="lbDataSchemaState" Background="AliceBlue" Margin="120,10,10,10" ItemTemplate="{StaticResource _ABC}">
        </ListBox>
    </Grid>
</Window>
